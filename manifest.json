{
  "manifest_version": 3,
  "name": "綠界贊助成功動畫 ⇄ 卡片模式",
  "version": "1.0.0",
  "description": "在綠界「贊助成功動畫網址」啟動卡片列表模式",
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://payment.ecpay.com.tw/*",
    "https://payment-stage.ecpay.com.tw/*"
  ],
  "action": {
    "default_title": "未偵測到「贊助成功動畫網址」",
    "default_icon": "icons/icon-unable-16.png"
  },
  "icons": {
    "16": "icons/icon-active-16.png",
    "32": "icons/icon-active-32.png",
    "48": "icons/icon-active-48.png",
    "128": "icons/icon-active-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/init.js",
        "scripts/apply.js",
        "scripts/restore.js"
      ],
      "matches": [
        "https://payment.ecpay.com.tw/*",
        "https://payment-stage.ecpay.com.tw/*"
      ]
    }
  ]
}